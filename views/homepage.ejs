<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Modern File Upload</title>

  <!-- Basic styling for layout and upload container -->
  <style>
    body {
      font-family: Arial;
      background-color: #f9f9f9;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh; /* Full screen height */
    }

    form {
      background: white;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      width: 400px;
      text-align: center;
    }

    /* Upload container styled as drag-and-drop area */
    #upload-container {
      border: 2px dashed #ccc;
      padding: 30px;
      cursor: pointer;
      margin-bottom: 15px;
    }

    /* Hover effect for better user experience */
    #upload-container:hover {
      border-color: #0091ff;
      background: #f0faff;
    }

    /* Hide the actual file input (we'll trigger it via JavaScript) */
    #upload-container input[type="file"] {
      display: none;
    }

    /* Styling for clickable "Choose file" text */
    #upload-container span {
      color: #0091ff;
      font-weight: bold;
    }

    /* Submit button styling */
    button {
      padding: 10px 20px;
      background: #0091ff;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    /* Button hover effect */
    button:hover {
      background: #0078d4;
    }
  </style>
</head>
<body>

<!-- Form with enctype to support file uploads -->
<form action="/upload" method="POST" enctype="multipart/form-data">
  
  <!-- Custom file input area -->
  <div id="upload-container" onclick="document.getElementById('image').click();">
    <!-- Hidden actual file input -->
    <input type="file" name="image" id="image" required />
    
    <!-- Instructional text -->
    <p>Drag and Drop file here or <span>Choose file</span></p>
  </div>

  <!-- Submit button -->
  <button type="submit">Upload</button>
</form>

<!-- Script to show the selected file name -->
<script>
  const fileInput = document.getElementById('image');
  const uploadContainer = document.getElementById('upload-container');
  const infoText = uploadContainer.querySelector('p');

  // When a file is selected, show its name in the upload container
  fileInput.addEventListener('change', () => {
    if (fileInput.files.length > 0) {
      infoText.innerHTML = `Selected File: <span>${fileInput.files[0].name}</span>`;
    }
  });
</script>

</body>
</html>
